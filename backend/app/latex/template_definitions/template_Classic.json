{
  "template_id": "Classic",
  "name": "Classic",
  "description": "A traditional single-column resume template with gold accents",
  "layout": {
    "type": "single-column",
    "columns": [
      {
        "width": "100%",
        "background": "#ffffff",
        "padding": "0.75in",
        "sections": ["header", "summary", "skills", "experience", "education", "achievements", "projects", "certifications", "others"]
      }
    ]
  },
  "colors": {
    "primary": "#292929",
    "secondary": "#666666", 
    "accent": "#DAA520",
    "background": "#ffffff",
    "text": "#292929"
  },
  "typography": {
    "font_family": "'Open Sans', sans-serif",
    "name_size": "24px",
    "section_header_size": "16px",
    "body_size": "11px",
    "line_height": "1.6"
  },
  "sections": {
    "header": {
      "type": "header",
      "fields": ["name", "title", "contact"],
      "layout": "left",
      "styling": {
        "container": {
          "display": "flex",
          "justify-content": "space-between",
          "align-items": "flex-start",
          "margin-bottom": "1em"
        },
        "name_style": {
          "font-size": "24px",
          "font-weight": "bold",
          "color": "#292929",
          "text-transform": "uppercase",
          "margin-bottom": "0.3em"
        },
        "title_style": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "margin-bottom": "0.5em"
        },
        "contact_style": {
          "font-size": "11px",
          "color": "#292929",
          "display": "grid",
          "grid-template-columns": "1fr 1fr",
          "gap": "0.2em"
        }
      }
    },
    "summary": {
      "type": "text",
      "title": "SUMMARY",
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "content": {
          "font-size": "11px",
          "color": "#292929",
          "line-height": "1.6",
          "margin-bottom": "0.5em"
        }
      }
    },
    "skills": {
      "type": "tags",
      "title": "SKILLS",
      "layout": "inline",
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "skills_container": {
          "margin-bottom": "0.5em"
        },
        "skills_label": {
          "font-weight": "bold",
          "color": "#DAA520",
          "display": "inline",
          "margin-right": "0.5em"
        },
        "skill_item": {
          "font-size": "11px",
          "color": "#292929",
          "display": "inline"
        }
      }
    },
    "experience": {
      "type": "list",
      "title": "EXPERIENCE",
      "item_layout": "standard",
      "fields": ["title", "company", "duration", "achievements"],
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "item_container": {
          "margin-bottom": "0.5em"
        },
        "item_header": {
          "display": "flex",
          "align-items": "center",
          "gap": "0.5em",
          "margin-bottom": "0.2em"
        },
        "item_duration": {
          "font-weight": "bold",
          "color": "#292929",
          "font-size": "11px"
        },
        "item_title": {
          "font-weight": "bold",
          "color": "#292929",
          "font-size": "11px"
        },
        "item_company": {
          "font-weight": "bold",
          "color": "#DAA520",
          "font-size": "11px",
          "display": "block",
          "margin-bottom": "0.2em"
        },
        "achievements": {
          "list-style": "disc",
          "margin-left": "1.2em",
          "font-size": "11px",
          "color": "#292929"
        }
      }
    },
    "education": {
      "type": "list",
      "title": "EDUCATION",
      "fields": ["degree", "institution", "year", "details"],
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "item_container": {
          "margin-bottom": "0.5em"
        },
        "item_header": {
          "display": "flex",
          "align-items": "center",
          "gap": "0.5em",
          "margin-bottom": "0.2em"
        },
        "item_year": {
          "font-weight": "bold",
          "color": "#292929",
          "font-size": "11px"
        },
        "item_degree": {
          "font-weight": "bold",
          "color": "#292929",
          "font-size": "11px"
        },
        "item_institution": {
          "font-weight": "bold",
          "color": "#DAA520",
          "font-size": "11px",
          "display": "block"
        },
        "details": {
          "list-style": "disc",
          "margin-left": "1.2em",
          "font-size": "11px",
          "color": "#292929"
        }
      }
    },
    "achievements": {
      "type": "list",
      "title": "KEY ACHIEVEMENTS",
      "layout": "columns",
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "achievements_container": {
          "display": "grid",
          "grid-template-columns": "1fr 1fr",
          "gap": "0.5em",
          "margin-bottom": "0.5em"
        },
        "achievement_item": {
          "font-size": "11px",
          "color": "#292929",
          "display": "flex",
          "align-items": "flex-start",
          "gap": "0.3em"
        },
        "achievement_icon": {
          "color": "#DAA520",
          "flex-shrink": "0"
        }
      }
    },
    "projects": {
      "type": "list",
      "title": "PROJECTS",
      "fields": ["title", "highlights"],
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "item_container": {
          "margin-bottom": "0.5em"
        },
        "project_title": {
          "font-weight": "bold",
          "color": "#292929",
          "font-size": "11px",
          "margin-bottom": "0.2em"
        },
        "highlights": {
          "list-style": "disc",
          "margin-left": "1.2em",
          "font-size": "11px",
          "color": "#292929"
        }
      }
    },
    "certifications": {
      "type": "list",
      "title": "CERTIFICATIONS",
      "layout": "single",
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "cert_item": {
          "font-size": "11px",
          "color": "#292929",
          "list-style": "disc",
          "margin-left": "1.2em"
        }
      }
    },
    "others": {
      "type": "list",
      "title": "ADDITIONAL INFORMATION",
      "layout": "single",
      "styling": {
        "section_title": {
          "font-size": "16px",
          "font-weight": "bold",
          "color": "#DAA520",
          "text-transform": "uppercase",
          "margin-top": "1em",
          "margin-bottom": "0.3em",
          "border-bottom": "1.5px solid #DAA520",
          "padding-bottom": "0.3em"
        },
        "other_item": {
          "font-size": "11px",
          "color": "#292929",
          "list-style": "disc",
          "margin-left": "1.2em"
        }
      }
    }
  },
  "spacing": {
    "section_margin": "1em 0",
    "item_margin": "0.5em 0",
    "paragraph_spacing": "0.3em"
  }
}