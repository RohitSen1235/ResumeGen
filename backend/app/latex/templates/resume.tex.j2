\documentclass[10pt,a4paper]{article}

% Required packages
\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage{lmodern}
\usepackage[margin=0.70in]{geometry}
\usepackage{hyperref}
\usepackage{enumitem}
\usepackage{xcolor}
\usepackage{titlesec}
\usepackage{fancyhdr}
\usepackage{ragged2e}

% Colors
\definecolor{primary}{RGB}{0, 123, 255}
\definecolor{secondary}{RGB}{108, 117, 125}

% Custom commands
\newcommand{\sectiontitle}[1]{%
    \vspace{0.4em}%
    {\color{primary}\large\textbf{#1}}%
    \vspace{0.3em}\par%
    \hrule%
    \vspace{0.4em}%
}

% Document styling
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}

% Adjust spacing
\setlength{\parindent}{0pt}
\setlength{\parskip}{0.6em}
\titlespacing*{\section}{0pt}{0.8em}{0.5em}

% List spacing
\setlist{noitemsep, topsep=0pt, parsep=0.3em, partopsep=0pt, leftmargin=*}

% Hyperref setup
\hypersetup{
    colorlinks=true,
    linkcolor=primary,
    urlcolor=primary
}

\begin{document}

% Header
\begin{center}
    {\LARGE\textbf{[[ name ]]}}\par
    \vspace{0.5em}
    {\small\color{secondary}
        \begin{tabular}{@{}c@{}}
            \href{mailto:[[ email ]]}{[[ email ]]}
            [% if phone %] \quad|\quad +91 [[ phone ]][% endif %]
            [% if location %] \quad|\quad [[ location ]][% endif %]
            [% if linkedin %] \quad|\quad \href{https://[[ linkedin ]]}{Linkedin.com/[[ name ]]}[% endif %]
        \end{tabular}
    }\par
\end{center}

% Professional Summary
[% if summary %]
\sectiontitle{Professional Summary}
\small
[[ summary ]]
[% endif %]

% Professional Experience
[% if experience %]
\sectiontitle{Professional Experience}
\small
[% for exp in experience %]
{\textbf{[[ exp.title ]]}} | [[ exp.company ]] | [[ exp.duration ]]
[% if exp.achievements and exp.achievements|length > 0 %]
\begin{itemize}
    [% for achievement in exp.achievements %]
    \item [[ achievement | replace('&', '\\&') ]]
    [% endfor %]
\end{itemize}
[% endif %]
[% endfor %]
[% endif %]

% Skills
[% if skills %]
\sectiontitle{Skills}
\small
\begin{itemize}
    [% for skill in skills %]
    \item [[ skill ]]
    [% endfor %]
\end{itemize}
[% endif %]

% Education
[% if education %]
\sectiontitle{Education}
\small
[% for edu in education %]
{\textbf{[[ edu.degree ]]}} | [[ edu.institution ]] | [[ edu.year ]]
[% if edu.details and edu.details|length > 0 %]
\begin{itemize}
    [% for detail in edu.details %]
    \item [[ detail ]]
    [% endfor %]
\end{itemize}
[% endif %]
[% endfor %]
[% endif %]

% Certifications (if any)
[% if certifications and certifications|length > 0 %]
\sectiontitle{Certifications}
\small
\begin{itemize}
    [% for cert in certifications %]
    \item [[ cert ]]
    [% endfor %]
\end{itemize}
[% endif %]

\end{document}
